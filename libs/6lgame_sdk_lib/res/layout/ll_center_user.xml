<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_member_center_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ll_ucenter_bg"
    android:orientation="vertical" >

    <include layout="@layout/ll_center_head" />

    <RelativeLayout
        android:id="@+id/ll_ucenter_user_info_item"
        android:layout_width="fill_parent"
        android:layout_height="84dp"
        android:layout_margin="10dp"
        android:background="@color/ll_ucenter_title_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ll_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ll_ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/ll_user_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ll_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:textColor="@color/ll_light_black"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ll_account_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="账户余额:"
                    android:textColor="@color/ll_ucenter_info_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ll_account_balance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll_account_balance_label"
                    android:paddingLeft="2dp"
                    android:singleLine="true"
                    android:text="10"
                    android:textColor="@color/ll_ucenter_msg_unread"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ll_recharge_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll_account_balance_text"
                    android:singleLine="true"
                    android:text="榴莲"
                    android:textColor="@color/ll_light_black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ll_recharge_money_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll_recharge_money_unit"
                    android:singleLine="true"
                    android:text="(xx元)"
                    android:textColor="@color/ll_light_black"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/ll_last_sign_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近登录:"
                    android:textColor="@color/ll_ucenter_info_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ll_last_sign_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ll_last_sign_text"
                    android:paddingLeft="2dp"
                    android:text="2015-05-07 10:07:13"
                    android:textColor="@color/ll_ucenter_info_text"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/ll_ucenter_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ll_ucenter_btn_selector"
        android:text="加载失败，点击重试"
        android:textColor="@color/ll_black"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_liulian_recharge_item_port"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ll_orange_btn_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp" >

        <ImageView
            android:id="@+id/ll_ledou_ic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ll_liulian_ic" />

        <ImageView
            android:id="@+id/ll_dangle_top_up_line_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ll_dangle_top_up_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ll_le_dou_recharge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="榴莲币充值"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ll_btn_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ll_icon_go" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ll_login_box_bg"
            android:orientation="vertical"
            android:padding="0dp" >

            <RelativeLayout
                android:id="@+id/ll_ucenter_change_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ll_back_btn_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/ll_change_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="修改密码"
                    android:textColor="@color/ll_light_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ll_right_arrow_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ll_icon_go" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/ll_color_login_box_gb" />

            <RelativeLayout
                android:id="@+id/ll_ucenter_binding_phone_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ll_back_btn_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/ll_binding_phone_number_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="绑定手机"
                    android:textColor="@color/ll_light_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ll_right_arrow_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ll_icon_go" />

                <TextView
                    android:id="@+id/ll_phone_bound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/ll_right_arrow_image4"
                    android:text="未绑定"
                    android:textColor="@color/ll_ucenter_navi_text_color_pressed"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/ll_color_login_box_gb" />

            <RelativeLayout
                android:id="@+id/ll_ucenter_set_pay_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ll_back_btn_selector"
                android:clickable="true" >

                <TextView
                    android:id="@+id/ll_set_pay_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="设置支付密码"
                    android:textColor="@color/ll_light_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ll_right_arrow_image6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ll_icon_go" />

                <TextView
                    android:id="@+id/ll_pay_password_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/ll_right_arrow_image6"
                    android:text="未设置"
                    android:textColor="@color/ll_ucenter_navi_text_color_pressed"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="榴莲科技，无线精彩，精彩无限！" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="商务合作QQ：3206431610" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>