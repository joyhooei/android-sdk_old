<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ll_login_padding_left_right"
    android:paddingRight="@dimen/ll_login_padding_left_right" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择找回方式:"
        android:textColor="@color/ll_light_black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/ll_login_box_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/ll_by_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ll_back_btn_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:singleLine="true"
                android:text="通过绑定的手机号"
                android:textColor="@color/ll_light_black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:src="@drawable/ll_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ll_color_login_box_gb" />

        <LinearLayout
            android:id="@+id/ll_by_question"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ll_back_btn_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:singleLine="true"
                android:text="通过密保问题"
                android:textColor="@color/ll_light_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:src="@drawable/ll_right_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>