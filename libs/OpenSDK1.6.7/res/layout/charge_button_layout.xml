<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nmgc_kebi_ok_button_root"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/log_reg_bg_selector"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nmgc_need_kebi_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/still_need_kebi"
        android:textAppearance="@style/nmgc_kebi_ok" />

    <TextView
        android:id="@+id/nmgc_kebi_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"     
        android:textAppearance="@style/show_need_kebi" />

    <TextView
        android:id="@+id/nmgc_need_kebi_bellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_to_charge"
        android:textAppearance="@style/nmgc_kebi_ok" />

</LinearLayout>