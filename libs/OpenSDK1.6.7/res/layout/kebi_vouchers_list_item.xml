<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp" 
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/voucher_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/voucher_type"
            android:layout_width="63dp"
            android:layout_height="23dp"
            android:background="@drawable/vouchers_bg_common"
            android:gravity="center"
            android:textColor="#585858"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/voucher_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#585858"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/voucher_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:textColor="#585858"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/voucher_check"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/check_box_no"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>