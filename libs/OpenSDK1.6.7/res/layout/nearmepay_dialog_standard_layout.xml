<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_standard_layout_ll"
        style="@style/DialogContainer"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_shape" >

        <LinearLayout style="@style/DialogTitle" >

            <TextView
                android:id="@+id/dialog_standard_tv_title"
                style="@style/DialogTitleText"
                android:textColor="@color/dialog_title_text_color"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView style="@style/NearMePayActivityBasicBoldDivide" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_standard_tv_message"
                style="@style/DialogContentText"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:textColor="#363636"
                android:textSize="18dp" >
            </TextView>
        </LinearLayout>

        <ImageView style="@style/NearMePayActivityBasicBoldDivide" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_standard_bt_yes"
                style="@style/DialogButtonNew"
                android:ellipsize="end" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#ffaaaaaa" />

            <Button
                android:id="@+id/dialog_standard_bt_no"
                style="@style/DialogButtonNew"
                android:ellipsize="end"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>