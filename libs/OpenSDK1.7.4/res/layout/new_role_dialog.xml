<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="186dp"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:background="@drawable/nmgc_dialog_170">
    
    <TextView 
        android:id="@+id/nmgc_upgrade_dia_title"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="@string/nmgc_new_role"
        android:textSize="17sp"
        android:textColor="#333333"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/nmgc_comm_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="#4f504e"
            android:text="@string/nmgc_role_id"/>
        <EditText 
        	android:id="@+id/nmgc_new_role"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:maxLength="12"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
        	android:textSize="15sp"/>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/list_item_divider"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/sort_grid_divider_vertical"
        android:showDividers="middle"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/nmgc_sure"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nmgc_global_queding"
            android:textColor="#00925f"
            android:textSize="18sp"/>
        <TextView 
            android:id="@+id/nmgc_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nmgc_global_cancel"
            android:textColor="#333333"
            android:textSize="18sp"/>
        
        
    </LinearLayout>
    

</LinearLayout>