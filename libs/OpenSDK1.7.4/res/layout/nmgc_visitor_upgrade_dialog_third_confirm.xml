<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" 
    android:background="@drawable/nmgc_dialog_170">
    
    <TextView 
        android:id="@+id/nmgc_upgrade_dia_title"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="@string/nmgc_upgrade_visitor_account"
        android:textSize="18sp"
        android:textColor="#333333"/>
    
    <TextView 
        android:id="@+id/nmgc_uc_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        android:text="@string/nmgc_uclogin_not_upgrade_hint"
        android:textSize="14sp"
        android:textColor="#4f504e"/>
    
    <CheckBox 
        android:id="@+id/nmgc_not_hint_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:button="@drawable/uc_selector_checkbox_bg"
        android:text="@string/nmgc_no_more_hint"
        android:textColor="#4f504e"/>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/list_item_divider"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/sort_grid_divider_vertical"
        android:showDividers="middle"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/nmgc_upgrade_visitor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nmgc_upgrade_visitor_account"
            android:textColor="#00925f"
            android:textSize="18sp"/>
        <TextView 
            android:id="@+id/nmgc_not_to_upgrade"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/nmgc_sure_not_updgrade"
            android:textColor="#333333"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>