<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="84dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:background="@drawable/nmgc_auto_login_dialog_bg"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@null"
        android:layout_marginLeft="20dp"
        android:src="@drawable/nmgc_login_success_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_auto_login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="21dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nmgc_dear_player"
            android:textColor="#363636"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_auto_login_gameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/nmgc_game_id"
            android:textColor="#363636"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>