<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/uc_head_view_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sim1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uc_head_view_height"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/choose_dialog_sim_1"
            android:textColor="#333333"
            android:textSize="@dimen/uc_middle_51_text_size" />

        <TextView
            android:id="@+id/sim2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/uc_head_view_height"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/choose_dialog_sim_2"
            android:textColor="#333333"
            android:textSize="@dimen/uc_middle_51_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/uc_line_h" />

    <TextView
        android:id="@+id/never_selected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/uc_head_view_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/dialog_negative_btn_text"
        android:textColor="#333333"
        android:textSize="@dimen/uc_middle_54_text_size" />

</LinearLayout>