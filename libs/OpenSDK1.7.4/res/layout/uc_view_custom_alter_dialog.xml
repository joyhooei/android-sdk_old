<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/custom_dialog_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/uc_bg_custom_dialog"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dialog_head_layout"
            android:layout_width="match_parent"
            android:layout_height="53.33dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/uc_dark_text_color"
                android:textSize="@dimen/uc_big_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1.33dp"
                android:layout_marginRight="1.33dp"
                android:background="@drawable/uc_line_h" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="7dp" >

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingBottom="13dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="13dp"
                android:textColor="@color/uc_dark_text_color"
                android:textSize="@dimen/uc_middle_51_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/uc_line_h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/dialog_btn_yes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/uc_selector_dialog_btn"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/uc_dark_text_color"
                    android:textSize="@dimen/uc_middle_51_text_size" />

                <ImageView
                    android:id="@+id/dialog_btn_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/uc_line_v" />

                <Button
                    android:id="@+id/dialog_btn_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/uc_selector_dialog_btn"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/uc_dark_text_color"
                    android:textSize="@dimen/uc_middle_51_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>