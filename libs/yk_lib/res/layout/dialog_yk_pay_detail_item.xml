<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/yk_white"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0px"
        android:background="@color/yk_title_line" />

    <RelativeLayout
        android:id="@+id/yk_pay_detail_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/YK_GameSDK_119PX"
        android:orientation="horizontal"
        android:paddingTop="@dimen/YK_GameSDK_10PX" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_arrow"
            android:paddingLeft="@dimen/YK_GameSDK_36PX" >

            <RelativeLayout
                android:id="@+id/item_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_goodsname_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="#717171"
                    android:textSize="@dimen/YK_GameSDK_30PX" />

                <TextView
                    android:id="@+id/item_isSuccess_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="@color/yk_pay_datail_item_issuccess"
                    android:textSize="@dimen/YK_GameSDK_30PX" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_line1" >

                <TextView
                    android:id="@+id/item_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/YK_GameSDK_6PX"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="#717171"
                    android:textSize="@dimen/YK_GameSDK_30PX" />

                <TextView
                    android:id="@+id/item_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/YK_GameSDK_10PX"
                    android:text="@string/yk_text_ykgame_pay"
                    android:textColor="@color/yk_edit_text_hint"
                    android:textSize="@dimen/YK_GameSDK_24PX" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/YK_GameSDK_26PX"
            android:src="@drawable/yk_pay_detail_item_arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_layout2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/YK_GameSDK_138PX"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/yk_pay_detail_item_curve_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yk_pay_detail_item_curve" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_orderid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/YK_GameSDK_36PX"
                android:text="@string/yk_text_ykgame_pay"
                android:textColor="#717171"
                android:textSize="@dimen/YK_GameSDK_30PX" />

            <TextView
                android:id="@+id/item_tips_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_orderid_txt"
                android:paddingLeft="@dimen/YK_GameSDK_36PX"
                android:paddingTop="@dimen/YK_GameSDK_6PX"
                android:text="@string/yk_text_ykgame_pay"
                android:textColor="#717171"
                android:textSize="@dimen/YK_GameSDK_30PX" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>