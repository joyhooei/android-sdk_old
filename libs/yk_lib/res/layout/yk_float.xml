<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/yk_float_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.youku.gamesdk.memfloat.YKRelativeLayout
            android:id="@+id/yk_float_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/yk_float_logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yk_float_logo_active" />

            <ImageView
                android:id="@+id/yk_float_present_logo_pot_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/yk_float_logo_img"
                android:src="@drawable/yk_float_pot"
                android:visibility="invisible" />
        </com.youku.gamesdk.memfloat.YKRelativeLayout>

        <LinearLayout
            android:id="@+id/yk_float_sub_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/yk_float_present_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/YK_GameSDK_7PX"
                android:paddingRight="@dimen/YK_GameSDK_14PX"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/yk_float_present_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yk_float_present" />

                <ImageView
                    android:id="@+id/yk_float_present_pot_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/yk_float_present_img"
                    android:src="@drawable/yk_float_pot"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/yk_float_change_account_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/YK_GameSDK_18PX"
                android:paddingRight="@dimen/YK_GameSDK_18PX"
                android:src="@drawable/yk_float_change_account"
                android:visibility="gone"  />

            <ImageView
                android:id="@+id/yk_float_hide_img"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/YK_GameSDK_18PX"
                android:paddingRight="@dimen/YK_GameSDK_18PX"
                android:src="@drawable/yk_float_hide"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>