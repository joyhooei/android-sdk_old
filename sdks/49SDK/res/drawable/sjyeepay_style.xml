<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true">
        <shape android:shape="rectangle">
			<stroke android:width="1dp" android:color="#d7f1c9"/>
			<solid android:color="#fafef8"/>
        </shape>
    </item>
    <item android:state_focused="true">  <!-- 焦点 -->
        <shape android:shape="rectangle">
			<stroke android:width="1dp" android:color="#d7f1c9"/>
			<solid android:color="#fafef8"/>
        </shape>
    </item>
    <item > <!-- 无焦点 -->
        <shape android:shape="rectangle">
			<stroke android:width="1dp" android:color="@color/sjwhite"/>
			<solid android:color="@color/sjwhite"/>
        </shape>
    </item>

</selector>
