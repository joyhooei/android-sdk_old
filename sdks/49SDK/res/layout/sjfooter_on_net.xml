<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/sjicon_gift_list_default"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/loading_more_on_net"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/sjicon_gift_list_default"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/load_more_refresh_progress_on_net"
           	style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/loading_more_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:gravity="center"
            android:text="@string/sjloading_more"
            android:textColor="@color/sjblack" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more_on_net"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/sjicon_gift_list_default"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/load_more_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dp"
            android:gravity="center"
            android:text="@string/sijiu_more"
            android:textColor="@color/sjblack" >
        </TextView>
    </LinearLayout>

</LinearLayout>