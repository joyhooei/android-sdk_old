<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/sjdialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/sjaccount"
                android:textColor="@color/sjrecharge_txt_default"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/userEdit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/sjlogin_m_edit_bg"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/sjblack" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="密保问题"
                android:textColor="@color/sjrecharge_txt_default"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/sjlogin_m_edit_bg" >

                <TextView
                    android:id="@+id/tv_mibao"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:text="点击获取密保问题"
                    android:textColor="@color/sjblack"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/user_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/sjlogin_up_style"
                    android:clickable="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_daan"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/sjphoneNum"
                android:textColor="@color/sjrecharge_txt_default"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phoneEdit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/sjlogin_m_edit_bg"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/sjblack" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_newp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="新密码"
                android:textColor="@color/sjrecharge_txt_default"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_newpa"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/sjlogin_m_edit_bg"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/sjblack" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/resultbutton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/sjorange_btn_style"
            android:gravity="center"
            android:text="@string/sjok"
            android:textColor="@color/sjwhite"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/sjblue_btn_style"
            android:gravity="center"
            android:text="@string/sj_cancel"
            android:textColor="@color/sjwhite"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>