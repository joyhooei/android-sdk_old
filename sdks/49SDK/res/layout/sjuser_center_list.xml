<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/sjuser_center_nav" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sjwhite"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp" >
    <LinearLayout
            android:id="@+id/tv_userinfo_lin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/sjuser_tab_b"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          
           
            android:gravity="center"
            android:text="@string/sjuserinfo"
            android:textColor="@color/sjwhite" />
</LinearLayout>
        <LinearLayout
            android:id="@+id/tv_bangding_lin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/sjuser_tab_a"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_account_bangyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               
                android:text="@string/sjuser_account_bangding"
                android:textColor="@color/sjblack" />

            <TextView
                android:id="@+id/tv_account_bang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="(危险)"
                android:textColor="@color/sjred" />
        </LinearLayout>
 <LinearLayout
            android:id="@+id/tv_user_rechager_lin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
         android:background="@drawable/sjuser_tab_a"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_user_rechager_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          
       
            android:gravity="center"
            android:text="@string/sjuser_rechager_record"
            android:textColor="@color/sjblack" />
</LinearLayout>
 <LinearLayout
            android:id="@+id/tv_user_message_lin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
           android:background="@drawable/sjuser_tab_a"
            android:gravity="center_horizontal"
           android:visibility="gone"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            
         
            android:gravity="center"
            android:text="@string/sjuser_message"
            android:textColor="@color/sjblack"
             />
        </LinearLayout>
    </LinearLayout>
       
    <android.support.v4.view.ViewPager
        android:id="@+id/usre_vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>