<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/sjblue_s" >

        <ImageView
            android:id="@+id/icon_game_back"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sjback_background"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/recharge_back_btn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="25dp"
                android:background="@drawable/sjrecharge_back_btn"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/sj_gift_box"
            android:textColor="@color/sjwhite"
            android:textSize="22sp" />

        <Button
            android:id="@+id/game_back_but"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/sjback_background"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:scaleType="fitXY"
                android:src="@drawable/sjicon_box_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:scaleType="fitXY"
                android:src="@drawable/sjicon_box_2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:scaleType="fitXY"
                android:src="@drawable/sjicon_box_3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:scaleType="fitXY"
                android:src="@drawable/sjicon_box_4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="139dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/sjicon_box_5" />

                <Button
                    android:id="@+id/sj_open_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/sj_shape_box"
                    android:padding="16dp"
                    android:text="打开49游戏盒子"
                    android:textColor="#f1f1f1"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>