<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/sjblue_d" >

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="礼包大杂烩"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sjback_background" >

            <Button
                android:id="@+id/recharge_bill_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sjrecharge_back_btn_style" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:background="@color/sjwhite"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/tv_news_interface"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/sjuser_tab_b"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新闻活动"
          android:textColor="@color/sjwhite"  />

        <TextView
            android:id="@+id/tv_gift_interface"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/sjuser_tab_a"
            android:gravity="center"
            android:text="礼包列表"
            android:textColor="@color/sjblack" />

        <TextView
            android:id="@+id/tv_numberbox_interface"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/sjuser_tab_a"
            android:gravity="center"
            android:text="存号箱"
            android:textColor="@color/sjblack" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_center_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/sjwhite" />
    
    
</LinearLayout>