<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/kaopu_pay_logo_bt"
                style="@style/kaopu_left_logo" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/kaopu_pay_logo_handle_view"
            style="@style/kaopu_left_logo_open"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/kaopu_pay_logo_user_bt"
                style="@style/kaopu_left_logo_user"
                android:clickable="true"
                android:text="@string/kaopu_left_logo_user" />

            <TextView
                android:id="@+id/kaopu_pay_logo_help_bt"
                style="@style/kaopu_left_logo_help"
                android:clickable="true"
                android:text="@string/kaopu_left_logo_help" />

            <TextView
                android:id="@+id/kaopu_pay_logo_msg_bt"
                style="@style/kaopu_left_logo_mes"
                android:clickable="true"
                android:text="@string/kaopu_left_logo_mes" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/kaopu_pay_logo_right_bt"
                style="@style/kaopu_left_logo"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>