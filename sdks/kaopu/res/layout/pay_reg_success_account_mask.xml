<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pay_mask_bg">

        <ImageView
            android:id="@+id/imageView_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_screenshot_tip"
            android:scaleType="fitStart"
            android:layout_alignBottom="@+id/kaopu_center_layout"
            android:layout_toLeftOf="@+id/kaopu_center_layout"
            android:layout_toStartOf="@+id/kaopu_center_layout" />

        <LinearLayout
            android:id="@+id/kaopu_center_layout"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />


    </RelativeLayout>
</RelativeLayout>