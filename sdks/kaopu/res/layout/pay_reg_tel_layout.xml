<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/kaopu_common_floatbox"
        style="@style/kaopu_common_floatbox"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <RelativeLayout
            android:id="@+id/kaopu_float_top"
            style="@style/kaopu_float_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/kaopu_float_logo"
                    style="@style/kaopu_float_logo" />

                <TextView
                    android:id="@+id/kaopu_float_top_text"
                    style="@style/kaopu_float_top_text"
                    android:layout_gravity="right"
                    android:text="@string/kaopu_reg_tel_title" />
            </LinearLayout>

            <TextView
                android:id="@+id/kaopu_float_close"
                style="@style/kaopu_float_close"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:clickable="true" />
        </RelativeLayout>
        <!-- 公用头部 end -->

        <LinearLayout
            style="@style/kaopu_float_input_bg_nopadding"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView style="@style/kaopu_float_input_tel" />

            <EditText
                android:id="@+id/kaopu_pay_reg_accout_ed"
                style="@style/kaopu_logText_nopadding_hint"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:hint="@string/kaopu_reg_tel_hint"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/kaopu_float_input_bg_nopadding"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/kaopu_float_input_tel"
                android:background="@drawable/pay_icon_psw" />

            <EditText
                android:id="@+id/kaopu_pay_reg_password_ed"
                style="@style/kaopu_logText_nopadding_hint"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:hint="@string/kaopu_reg_passwd_hint"
                android:inputType="textPassword"
                android:maxLength="29"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            style="@style/kaopu_float_input_bg_nopadding"
            android:layout_height="38dp"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kaopu_pay_reg_checkcode_ed"
                style="@style/kaopu_logText_nopadding_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/pay_bg_input"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <com.cyjh.pay.widget.TimeTextView
                android:id="@+id/kaopu_pay_reg_get_checkcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/pay_bg_checkcode"
                android:gravity="center"
                android:text="@string/kaopu_reg_get_checkcode"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kaopu_regBtn"
            style="@style/kaopu_loginBtn">

            <TextView
                android:id="@+id/kaopu_pay_reg_bt"
                style="@style/kaopu_float_btn_red_small"
                android:layout_height="38dp"
                android:layout_marginLeft="0dp"
                android:clickable="true"
                android:text="@string/kaopu_reg_title"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kaopu_deal"
            style="@style/kaopu_deal"
            android:gravity="center">

            <TextView
                style="@style/kaopu_deal_text_blue"
                android:text="@string/kaopu_reg_agree_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/kaopu_register_rule_bt"
                style="@style/kaopu_deal_text"
                android:clickable="true"
                android:text="@string/kaopu_reg_contract_title"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/kaopu_other_link"
            style="@style/kaopu_other_link"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/kaopu_pay_reg_account"
                style="@style/kaopu_deal_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/kaopu_pay_reg_textView_padding"
                android:clickable="true"
                android:drawableLeft="@drawable/pay_bg_person"
                android:gravity="center_vertical"
                android:text="@string/kaopu_reg_account"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/kaopu_pay_reg_textView_padding"
                style="@style/kaopu_deal_text_blue_line"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/kaopu_pay_reg_fast"
                android:text="|" />

            <TextView
                android:id="@+id/kaopu_pay_reg_fast"
                style="@style/kaopu_deal_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:drawableLeft="@drawable/pay_bg_fast"
                android:gravity="center_vertical"
                android:text="@string/kaopu_fast_reg"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/kaopu_pay_reg_return_login"
                style="@style/kaopu_deal_text"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="@string/kaopu_reg_return_login"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>