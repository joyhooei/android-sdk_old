<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay_loading_selector"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/kaopu_layout_select_vouchers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kaopu_vouchers_name_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="1007100256DF2626"
            android:textColor="#6e6c6c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kaopu_vouchers_price_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="ï¿¥9"
            android:textColor="#6e6c6c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kaopu_vouchers_time_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="5"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text=" 14/10/20 20:30"
            android:textColor="#6e6c6c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kaopu_vouchers_choose_tv"
            android:layout_width="20dp"
            android:layout_height="38dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:background="@drawable/pay_icon_selected"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf" />

</LinearLayout>