<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ll_yellow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_action_bar_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_title_height" >

            <TextView
                android:id="@+id/ll_recharge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ll_plant_recharge"
                android:textColor="@color/ll_ucenter_navi_text_color_pressed"
                android:textSize="22sp" />

            <Button
                android:id="@+id/ll_recharge_back"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ll_ucenter_btn_selector"
                android:text="@string/ll_enter_game"
                android:textColor="@color/ll_ucenter_btn_text"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ll_color_login_box_gb" />
    </LinearLayout>

    <WebView
        android:id="@+id/ll_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ll_black"
        android:visibility="visible" />

</LinearLayout>