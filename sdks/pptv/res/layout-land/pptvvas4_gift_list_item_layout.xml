<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="38px"
    android:paddingRight="38px"
    android:paddingTop="20px" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/pptvvas4_gift_icon"
            android:layout_width="100px"
            android:layout_height="100px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36px"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:paddingBottom="14px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:background="@drawable/pptvvas4_bg_gift_title"
                android:paddingTop="10px" >

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas4_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="30px"
                    android:textStyle="bold" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas4_gift_subname"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@id/pptvvas4_gift_name"
                    android:singleLine="true"
                    android:gravity="center"
                    android:maxLength="15"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="26px" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas4_gift_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="30px" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:id="@+id/pptvvas4_gift_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/pptvvas4_gift_starttime"
                    android:singleLine="true"
                    android:text="67"
                    android:paddingRight="20px"
                    android:textColor="@color/pptvvas4_orange"
                    android:textSize="30px" />

                <com.pptv.vassdk.ui.widget.PPTVDTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/pptvvas4_gift_volume"
                    android:singleLine="true"
                    android:text="当前剩余："
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="28px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:orientation="horizontal"
                android:paddingLeft="30px" >

                <LinearLayout
                    android:id="@+id/pptvvas4_gift_gridview_container"
                    android:layout_width="740px"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical" />

                <com.pptv.vassdk.ui.widget.PPTVDButton
                    android:id="@+id/pptvvas4_gift_get_btn"
                    android:layout_width="210px"
                    android:layout_height="100px"
                    android:layout_marginLeft="62px"
                    android:background="@drawable/pptvvas4_button_orange_bg_selector"
                    android:gravity="center"
                    android:text="领  取"
                    android:textColor="@color/pptvvas4_white"
                    android:textSize="40px"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/pptvvas4_gift_list_line_gray" />

            <com.pptv.vassdk.ui.widget.PPTVDTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22px"
                android:layout_marginTop="20px"
                android:paddingLeft="30px"
                android:singleLine="true"
                android:text="添加pp游戏微信公众账号PPTVGAME获得更多礼包信息~"
                android:textColor="@color/pptvvas4_white"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/pptvvas4_white" />

</LinearLayout>