<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#b0000000"
        >
        <LinearLayout 
	        android:layout_height="@dimen/pptvvas_height_land"
	        android:layout_width="@dimen/pptvvas_width_land"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pptvvas_land_background"
	        >
	        <LinearLayout 
	            android:layout_width="fill_parent"
		        android:layout_height="40dip"
		        android:layout_marginTop="10dip"
		        android:orientation="horizontal"
	            >
	            <Button 
		            android:id="@+id/pptvvas_back_btn"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/pptvvas_regist_backbtn"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="25dip"
		            android:layout_gravity="center_vertical"
		            />
	            <TextView 
	                android:text="@string/pptvvas_pay_channel"
	                style="@style/pptvvas_title_land_text"
	                android:layout_marginLeft="10dip"
	                />
	        </LinearLayout>
		    <LinearLayout
		        android:layout_height="@dimen/pptvvas_heightb_land"
		        android:layout_width="@dimen/pptvvas_widthb_land"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dip">
		        
		        <TextView
		                android:id="@+id/pptvvas_pay_channel_choice"
		                style="@style/pptvvas_style_title"
		                android:text="@string/pptvvas_pay_channel_choice" 
		                android:visibility="gone"/>
		
		            <LinearLayout
		                android:layout_width="fill_parent"
		                android:layout_height="fill_parent"
		                >
		                <GridView 
					        android:id="@+id/pptvvas_pay_channel_listview"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:cacheColorHint="@android:color/transparent"
		                    android:divider="@android:color/white"
		                    android:dividerHeight="1dip"
		                    android:fadingEdge="none"
		                    android:listSelector="#00000000"
		                    android:scrollbars="none" 
		                    android:layout_marginTop="10dip"
		                    android:layout_marginLeft="20dip"
		                    android:layout_marginRight="20dip"
		                    android:background="@color/pptvvas_of_transparent"
						    android:numColumns="2"
						    android:stretchMode="columnWidth"
						    android:verticalSpacing="0dip"
						    android:horizontalSpacing="0dip"
						    android:gravity="center"
					        ></GridView>
		                <!-- <com.pptv.vassdk.ui.widget.MyListView
		                    android:id="@+id/pptvvas_pay_channel_listview"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:cacheColorHint="@android:color/transparent"
		                    android:divider="@android:color/white"
		                    android:dividerHeight="1dip"
		                    android:fadingEdge="none"
		                    android:listSelector="#00000000"
		                    android:scrollbars="none" 
		                    android:layout_marginTop="0dip"
		                    android:layout_marginLeft="20dip"
		                    android:layout_marginRight="20dip"
		                    android:background="@drawable/pptvvas_shape_bg_listview"
		                    /> -->
		            </LinearLayout>
		        </LinearLayout>
	        </LinearLayout>
        </RelativeLayout>
</LinearLayout>