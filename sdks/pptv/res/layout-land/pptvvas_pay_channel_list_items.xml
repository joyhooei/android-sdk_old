<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dip"
    android:orientation="vertical"
    >
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="74dip"
        >
	    <LinearLayout 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:orientation="horizontal"
		    android:background="@drawable/pptvvas_channel_item_bg"
	        >
		    <ImageView
		       android:id="@+id/pptvvas_pay_channel_listview_logo"
		       android:layout_width="60dip"
		       android:layout_height="60dip"
		       android:gravity="center" 
		       android:scaleType="center"
		       android:layout_marginLeft="10dip"
		       />
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        >
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:orientation="vertical" 
		            android:layout_toLeftOf="@+id/pptvvas_payentranceimg"
		            android:layout_marginLeft="10dip">
		            <TextView
		                android:id="@+id/pptvvas_pay_channel_name"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="16dip" 
		                android:textColor="@drawable/pptvvas_buletext_bg"
		                />
		            <TextView
		                android:id="@+id/pptvvas_pay_channel_note"
		                android:layout_width="95dip"
		                android:layout_height="wrap_content"
		                android:maxLines="2"
		                android:textColor="@color/pptvvas_sdk2_darkgray"
		                android:textSize="13dip"
		                />
		        </LinearLayout>
		        <ImageView 
		            android:id="@+id/pptvvas_payentranceimg"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:background="@drawable/pptvvas_pay_entrance"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="15dip"
		            android:layout_centerVertical="true"
		            android:visibility="gone"
		            />
		    </RelativeLayout>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/pptvvas_right_line"
	        android:layout_height="65dip"
	        android:layout_width="1px"
	        android:background="@color/pptvvas_sdk2_darkgray"
	        android:layout_alignParentRight="true"
	        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/pptvvas_buttom_line"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="@color/pptvvas_sdk2_darkgray"
        android:layout_marginTop="0dip"
        />
</LinearLayout>
