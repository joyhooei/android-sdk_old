<?xml version="1.0" encoding="utf-8"?>
<com.pptv.vassdk.ui.widget.BackRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/back_relatv"
     >

    <com.pptv.vassdk.ui.widget.PPTVDTextView
        android:id="@+id/pay_title_tx"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="@dimen/pptvvas_topbar_two_height_portrait"
        android:background="@color/pptvvas4_transparent_black"
        android:gravity="center"
        android:textColor="@color/C_white"
        android:textSize="32px" />

    <com.pptv.vassdk.ui.widget.MyHorizontalScrollView
        android:id="@+id/pay_horizontalscrollview"
        android:layout_width="fill_parent"
        android:layout_height="165px"
        android:layout_gravity="center"
        android:layout_marginTop="120px"
        android:layout_below="@+id/pay_title_tx"
        android:background="@android:color/transparent"
        android:fadingEdgeLength="30px"
        android:layout_marginBottom="55px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/id_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.pptv.vassdk.ui.widget.MyHorizontalScrollView>

    <com.pptv.vassdk.ui.widget.PPTVDButton
        android:id="@+id/pptvvas_next_step_btn"
        style="@style/pptvvas4_button_arrow_blue"
        android:layout_below="@+id/pay_horizontalscrollview"
        android:layout_marginBottom="35px"
        android:layout_centerHorizontal="true"
        android:text="@string/pptvvas_viewpager_next" />

</com.pptv.vassdk.ui.widget.BackRelativeLayout>