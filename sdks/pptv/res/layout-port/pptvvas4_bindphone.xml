<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.pptv.vassdk.ui.widget.BackRelativeLayout
        android:id="@+id/pptvvas_backlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
		<RelativeLayout
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:layout_marginTop="@dimen/pptvvas_topbar_two_height_portrait"
		   android:layout_marginBottom="@dimen/pptvvas_bottombar_height"
		   >
		   <LinearLayout 
		       android:id="@+id/pptvvas_centerlay"
		       android:layout_width="@dimen/pptvvas_edittext_width"
			   android:layout_height="wrap_content"
			   android:orientation="vertical"
			   android:layout_marginTop="100px"
			   android:layout_centerHorizontal="true">
			   <com.pptv.vassdk.ui.widget.MyEdittext
			       android:id="@+id/pptvvas_userpassword"
			       android:layout_width="@dimen/pptvvas_edittext_width"
				   android:layout_height="@dimen/pptvvas_edittext_height"
				   android:layout_marginTop="0dip"
		           />
			   <com.pptv.vassdk.ui.widget.MyEdittext
			       android:id="@+id/pptvvas_phonenumber"
			       android:layout_width="@dimen/pptvvas_edittext_width"
				   android:layout_height="@dimen/pptvvas_edittext_height"
				   android:layout_marginTop="15px"
		           />
			   <com.pptv.vassdk.ui.widget.MyEdittext
			       android:id="@+id/pptvvas_idfcode"
			       android:layout_width="@dimen/pptvvas_edittext_width"
				   android:layout_height="@dimen/pptvvas_edittext_height"
				   android:layout_marginTop="15px"/>
	
	    
			   <com.pptv.vassdk.ui.widget.PPTVDButton
		           android:id="@+id/pptvvas_bindphonebtn"
		           style="@style/pptvvas4_button_arrow_blue"
		           android:layout_width="fill_parent"
		           android:layout_marginTop="15px"
		           android:text="@string/pptvvas4_bindphone_title"
		           />
		   </LinearLayout>
		</RelativeLayout>
    </com.pptv.vassdk.ui.widget.BackRelativeLayout>

</LinearLayout>
