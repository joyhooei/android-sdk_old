<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pptvvas4_transparent" >
    <RelativeLayout
	   android:layout_width="fill_parent"
	   android:layout_height="fill_parent"
	   >
	   <LinearLayout 
	       android:id="@+id/pptvvas_centerlay"
	       android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:orientation="vertical"
		   android:layout_centerInParent="true">
		   <com.pptv.vassdk.ui.widget.PPTVDTextView 
		       android:layout_width="@dimen/pptvvas_button_width"
		       android:layout_height="wrap_content"
		       android:textColor="@color/pptvvas4_white"
		       android:gravity="center_horizontal"
		       android:textSize="60px"
		       android:text="@string/pptvvas4_forgetpassword_tip3"
		       />
		   <com.pptv.vassdk.ui.widget.PPTVDTextView 
		       android:layout_width="@dimen/pptvvas_button_width"
		       android:layout_height="wrap_content"
		       android:textColor="@color/pptvvas4_white"
		       android:gravity="center_horizontal"
		       android:textSize="40px"
		       android:text="@string/pptvvas4_forgetpassword_tip4"
		       />
		   <com.pptv.vassdk.ui.widget.PPTVDButton
	           android:id="@+id/pptvvas_login_btn"
	           style="@style/pptvvas4_button_arrow_blue"
	           android:layout_marginTop="40px"
	           android:text="@string/pptvvas4_forgetpassword_login"
	           />
	   </LinearLayout>
	</RelativeLayout>

</LinearLayout>
