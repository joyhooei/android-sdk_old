<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    >
    <RelativeLayout 
        android:id="@+id/pptvvas_background"
        android:layout_height="380dip"
        android:layout_width="290dip"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dip"
       	android:layout_marginBottom="15dip"
       	android:background="@drawable/pptvvas_nomal_dialog_bg"
        >
        <LinearLayout 
            android:id="@+id/pptvvas_top_tip"
            android:layout_height="35dip"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
	        <ImageView
	            android:id="@+id/pptv_logo"
	            android:layout_width="60dip"
	            android:layout_height="30dip"
	            android:layout_marginLeft="10dip"
	            android:layout_gravity="bottom"
	            android:src="@drawable/pptvvas4_logo_pop" />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/pptvvas_update_use_wifi"
                android:textColor="#BFCEDB"
                android:textSize="12dip"
                android:layout_marginLeft="5dip"
                android:layout_marginBottom="2dip"
                />
        </LinearLayout>
        <TextView 
               android:id="@+id/pptvvas_title"
               android:layout_width="match_parent"
      			android:layout_height="wrap_content"
      			android:text="@string/pptvvas_update_find"
      			android:textSize="20dip"
      			android:textColor="@color/pptvvas_black"
      			android:layout_marginTop="0dip"
      			android:gravity="center"
      			android:layout_below="@+id/pptvvas_top_tip"
               />
	    <LinearLayout
	        android:layout_below="@+id/pptvvas_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@+id/pptvvas_btn_layout"
	        android:orientation="vertical" >
	        <ScrollView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
            	android:scrollbarStyle="insideInset"
            	android:scrollbarThumbVertical="@drawable/pptvvas4_update_scrollview_progress_slider"
            	android:scrollbarTrackVertical="@drawable/pptvvas4_update_scrollview_progress_bg"
            	android:scrollbarSize="1dip"
	            >
	            <LinearLayout 
	                android:layout_width="match_parent"
	            	android:layout_height="match_parent"
	            	android:orientation="vertical"
	                >
                    <TextView 
                        style="@style/pptvvas_warp"
            			android:text="@string/pptvvas_update_info_title"
            			android:textSize="12dip"
            			android:textColor="@color/pptvvas_black"
            			
                        />
                    <TextView 
                        android:id="@+id/pptvvas_ver"
                        style="@style/pptvvas_warp"
            			android:textSize="12dip"
            			android:textColor="@color/pptvvas_black"
                        />
	                <TextView 
	                    android:id="@+id/pptvvas_update_info"
	                    android:layout_width="match_parent"
	            		android:layout_height="match_parent"
            			android:layout_marginTop="5dip"
            			android:textColor="#7E848C"
            			android:textSize="12dip"
                        />
	            </LinearLayout>
	        </ScrollView>
	    </LinearLayout>
	    <TextView 
            android:id="@+id/pptvvas_speed"
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textSize="16dip"
   			android:textColor="@color/pptvvas_dim_gray"
   			android:layout_marginTop="5dip"
   			android:visibility="gone"
               />
	    <RelativeLayout 
	        android:id="@+id/pptvvas_btn_layout"
	        android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
	        >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dip"
	            android:layout_alignParentBottom="true"
	            android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/pptvvas_download_nexttime_btn"
	                android:layout_width="0dip"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:background="@drawable/dialog_btn_left"
	                android:gravity="center"
	                android:textColor="@color/normal_dialog_left_btn_text_color"
	                android:textSize="20dip" 
	                android:text="@string/pptvvas_update_next_time"/>
	            <TextView
	                android:id="@+id/pptvvas_download_btn"
	                android:layout_width="0dip"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:background="@drawable/dialog_btn_right"
	                android:gravity="center"
	                android:textColor="@color/normal_dialog_right_btn_text_color"
	                android:textSize="20dip" 
	                android:text="@string/pptvvas_update"/>
	        </LinearLayout>
	        
	        <ProgressBar 
		        android:id="@+id/pptvvas_progressbar"
	            android:layout_width="match_parent"
	        	android:layout_height="2dip"
	            android:max="100"
	            android:progress="0"
	            android:indeterminateOnly="false"
	            android:progressDrawable="@drawable/pptvvasl_progress_4"
		        />
	        <TextView 
                android:id="@+id/pptvvas_center_occupying"
                android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:textSize="20dip"
       			android:textColor="#063C6A"
       			android:text="继续更新"
       			android:layout_centerInParent="true"
       			android:visibility="invisible"
                   />
	        <TextView 
                android:id="@+id/pptvvas_downloaded_percent"
                android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:textSize="15dip"
       			android:textColor="#B2000000"
       			android:gravity="center"
       			android:layout_centerVertical="true"
       			android:layout_marginLeft="7dip"
       			android:layout_toRightOf="@+id/pptvvas_center_occupying"
                   />
        </RelativeLayout>
	</RelativeLayout>
</RelativeLayout>