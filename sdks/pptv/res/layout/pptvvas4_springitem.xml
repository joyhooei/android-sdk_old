<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10px"
    android:paddingBottom="10px">
    <ImageView
        android:id="@+id/pptvvas4_spring_icon"
        android:layout_width="40px"
        android:layout_height="40px"
        android:src="@drawable/pptvvas4_user"
        />
    <ImageView
        android:id="@+id/pptvvas4_reddot"
        android:layout_width="12px" 
        android:layout_height="12px"
        android:layout_toRightOf="@id/pptvvas4_spring_icon"
        android:src="@drawable/pptvvas4_reddot"
        />
    <TextView
      android:id="@+id/pptvvas4_springtitle"  
      android:layout_below="@id/pptvvas4_spring_icon"
       android:layout_width="40px"
       android:layout_height="20px"
       android:gravity="center"
        android:textSize="12px"
        android:text="123"
        />

</RelativeLayout>
