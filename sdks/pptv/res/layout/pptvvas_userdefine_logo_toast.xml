<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"  
    android:gravity="center"  
    android:orientation="vertical" >


    
    <LinearLayout
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:padding="30px"
    android:paddingTop="0px"
    android:paddingLeft="0px"
   android:background="@drawable/pptvvas_rounded_rectangle_bg"    
    android:orientation="vertical"  
    android:id="@+id/pptvvas_toast_bg"
    
        >
<ImageView
    android:layout_width="105px"
    android:layout_height="31px"
    android:src="@drawable/pptvvas4_logo_pop"
    android:layout_marginTop="10px"
    android:layout_marginLeft="0px"
    />

    

    <com.pptv.vassdk.ui.widget.PPTVDTextView
        android:id="@+id/pptvvas_userdefine_toast_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:textColor="@color/pptvvas_toast_content"
        android:textSize="40px" />
</LinearLayout>
</LinearLayout>