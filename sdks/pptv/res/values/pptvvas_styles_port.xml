    <!-- 居中显示的小空间的统一样式 -->
    <style name="pptvvas_port_style_centeritem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    
    <!-- 靠右的link -->
    <style name="pptvvas_port_style_linktext"
    parent="pptvvas_port_style_centeritem"
    >
        <item name="android:textColor">@color/pptvvas_blue</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
   
    <style name="pptvvas_port_style_bottom">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    
    <style name="pptvvas_port_style_bottom_tel">
        <item name="android:text">@string/pptvvas_bottom_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="pptvvas_port_style_bottom_logoword">
        <item name="android:text">@string/pptvvas_login_bottom_tip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">10dp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    
    <!-- 中心的提示语句 -->
    <style name="pptvvas_port_style_centerhint"
    parent="pptvvas_port_style_centeritem"
    >
        <item name="android:textColor">#ff656565</item>
        <item name="android:visibility">visible</item>
        
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
        
    </style>
    
    <!-- 一个带spinner的textedit -->
    <style name="pptvvas_port_style_edittext_havespinner"
    parent="pptvvas_port_style_centeritem"
    >
        <item name="android:background">@drawable/pptvvas_input_box</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <!-- 一个输入区域，里面包含一个textview与一个edittext -->
    <style name="pptvvas_port_style_inputarea" 
        parent="pptvvas_port_style_centeritem"
        >
        <item name="android:background">@drawable/pptvvas_input_box</item>
    </style>
    
 
    <style name="pptvvas_port_style_inputarea_textview" >
        <item name="android:textColor">@color/pptvvas_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="pptvvas_port_style_edittext" 
        parent="pptvvas_port_style_centeritem"
        >
        <item name="android:maxLength">30</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/pptvvas_input_box</item>
    </style>
    
    <style name="pptvvas_port_style_inputarea_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:maxLength">30</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
       
    </style>
    
    
    <style name="pptvvas_port_pay_amount_edit" 
    parent="pptvvas_port_style_inputarea_edittext"
    >
        <item name="android:hint">@string/pptvvas_payamount_edit_hint</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">200dip</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/pptvvas_input_box</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLength">10</item>
    </style>
    
    <style name="pptvvas_port_pay_amount_textview" 
    parent="pptvvas_port_style_inputarea_textview"
    >
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    
    
    
    <style name="pptvvas_port_style_button" 
    parent="pptvvas_port_style_centeritem"
    >
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/pptvvas_white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="pptvvas_port_style_button_large" 
    parent="pptvvas_port_style_button"
    >
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
    </style>
    
    <style name="pptvvas_port_style_button_middle" 
    parent="pptvvas_port_style_button"
    >
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginRight">40dip</item>
    </style>
    
    <style name="pptvvas_port_style_button_small" 
    parent="pptvvas_port_style_button"
    >
        <item name="android:layout_width">180dip</item>
    </style>
    
    
    <!-- 假的spinner 中的输入部分 -->
    <style name="pptvvas_port_style_edittext_spinner">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:maxLength">30</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 按钮，点后出现listview选择的dialog -->
     <style name="pptvvas_port_style_edittext_button">
         <item name="android:layout_width">30dip</item>
         <item name="android:layout_height">30dip</item>
         <item name="android:layout_gravity">right|center_vertical</item>
         <item name="android:background">@drawable/pptvvas_button_spinner_selector</item>
         <item name="android:layout_weight">0</item>
    </style>
    
    <!-- 登录部分的统一的背景风格 -->
    <style name="pptvvas_port_login_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">0dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/pptvvas_debug1</item>
    </style>
    
    <!-- pay部分的统一的背景风格 -->
    <style name="pptvvas_port_pay_bg"
        parent="pptvvas_port_login_bg" >
        <item name="android:background">@color/pptvvas_port_pay_bg</item>
