<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/icon_gift_dialog_linear"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@color/sjgift_top_bcolor"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gift_bag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textColor="@color/sjwhite"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@color/sjwhite" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/gift_dialog_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/sjblack"
                        android:gravity="center" />

                    <WebView
                        android:id="@+id/gfit_webview_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/sjgray_white"
                        android:padding="10dp"
                        android:textColor="@color/sjblack" />
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gift_dialog_copy"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:background="@drawable/sjgift_news_content_closebutton"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/sjwhite"
                android:textSize="18dp"
                android:text="复制" />

            <LinearLayout
                android:id="@+id/icon_gift_space"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/gift_dialog_close"
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:background="@drawable/sjgift_news_content_closebutton"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/sjwhite"
                android:textSize="18dp"
                android:text="关闭" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>