<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@drawable/sjrecharge_result_style"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#02AAF1"
        android:gravity="center" >

        <TextView
            android:id="@+id/result_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="平台币说明"
            android:textColor="@color/sjwhite"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="155dp" >

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/sjblack"
            android:textSize="14sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/resultbutton_e"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/sjblue_btn_style"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/sjwhite"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/resultbutton"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/sjblue_btn_style"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/sjwhite"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>