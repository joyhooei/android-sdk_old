<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >
    <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_marginTop="200dp"
    android:layout_marginBottom="200dp"
    android:layout_marginLeft="130dp"
    android:layout_marginRight="130dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/vivo_account_change_bg"
    >
	<RelativeLayout
	    android:id="@+id/vivo_account_change_fiirst_view"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="21dp"
    	android:layout_marginTop="1dp"
    	android:layout_alignParentTop="true"
    	android:layout_gravity="top"
    	android:orientation="horizontal">	  
    	 <ImageView
                android:id="@+id/vivo_account_change_icon"
                android:layout_width="37dp"
                android:layout_height="11dp"                
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/vivo_account_change_icon"
                android:layout_gravity="left"/>
            <RelativeLayout
	    android:id="@+id/vivo_account_change_layout"
	    android:layout_width="100dp"
    	android:layout_height="34dp"
    	 android:layout_alignParentRight="true"
    	  android:layout_centerVertical="true"
    	android:orientation="horizontal">
            <ImageView
                android:id="@+id/vivo_account_change_button"
                android:layout_width="11dp"
                android:layout_height="9dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/vivo_account_change_text"
                android:src="@drawable/vivo_account_change_button_drawable"/>
            <TextView
                android:id="@+id/vivo_account_change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:textSize="11.5dp"
                android:layout_marginRight="@dimen/vivo_account_change_margin_left"
                android:layout_alignParentRight="true"
                android:text="@string/vivo_account_change_text"
                android:textColor="@drawable/vivo_account_change_text_color_selector"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:layerType="software"
                android:singleLine="true"
                 />
            </RelativeLayout>
	</RelativeLayout>
	<RelativeLayout
	    android:id="@+id/vivo_account_change_second_view"
	    android:layout_below="@+id/vivo_account_change_fiirst_view"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="16dp"
    	android:layout_marginTop="20dp"    	    	
    	android:orientation="horizontal">	  
    	 <ImageView
                android:id="@+id/vivo_account_dialog_avatar"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/vivo_account_dialog_avatar"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/vivo_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/vivo_account_dialog_avatar"
                android:layout_alignParentRight="true"
                android:text="@string/vivo_account_change_accountlable"
                android:textColor="@color/vivo_account_change_text_color"
                android:textSize="16sp"
                android:gravity="bottom"
                android:layout_gravity="right"
                android:layerType="software"
                android:singleLine="true"
                 />
            <TextView
                android:id="@+id/vivo_sub_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp" 
                android:layout_marginRight="@dimen/vivo_account_change_margin_left"
                android:layout_toRightOf="@+id/vivo_account_dialog_avatar"
                android:layout_below="@+id/vivo_account_text"
                android:layout_alignParentRight="true"
                android:text="@string/vivo_account_change_account_sub_lable"
                android:textColor="@color/vivo_account_change_text_color"
                android:textSize="11.25sp"
                android:gravity="top"
                android:layout_gravity="right"
                android:layerType="software"
                android:singleLine="true"
                 />
	</RelativeLayout>
	<ImageView
                android:layout_marginTop="@dimen/vivo_first_view_marginTop_land"
                android:layout_below="@+id/vivo_account_change_second_view"
                android:id="@+id/vivo_account_change_saparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vivo_account_change_saparator"
               />
	<TextView
                android:layout_marginTop="@dimen/vivo_first_view_marginTop"
                android:layout_below="@+id/vivo_account_change_saparator"
                android:id="@+id/vivo_account_change_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/vivo_sub_account_entry_text_totalsec"
                android:textColor="@color/vivo_text_color_register_color"
                android:textSize="16sp"
                android:gravity="center"
                android:singleLine="true"
                 />	 	
</RelativeLayout>	
</LinearLayout>

