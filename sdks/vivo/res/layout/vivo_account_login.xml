<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_login_layout"
    android:orientation="vertical"
    android:background="@drawable/vivo_activity_background_color"
    >
    <RelativeLayout 
        android:id="@+id/account_title_layout"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/vivowindowTitleHeight"
    	android:orientation="horizontal"
    	android:background="@drawable/vivo_window_title_bar">
        <TextView 
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/vivo_app_name"
			android:textSize="@dimen/vivowindowTitleTextSize"
			android:textColor="@color/vivo_windowTitleColor"/>
        <Button
            android:id="@+id/titleLeftBtn"
            android:layout_width="40.5dp"
			android:layout_height="40.5dp"
			android:layout_marginLeft="2dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:background="@drawable/vivo_btn_title_back"
            />
        <ImageView 
            android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_toRightOf="@+id/titleLeftBtn"
			android:background="@drawable/vivo_title_left_line"/>
    </RelativeLayout>
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/vivo_edit_container_height"
    	android:paddingLeft="@dimen/vivo_change_pwd_lable_paddingLeft"
    	android:background="@drawable/vivo_edit_top_round"
    	android:orientation="horizontal"
    	android:id="@+id/account_num_input_layout"
    	android:layout_below="@+id/account_title_layout"
    	android:layout_marginTop="@dimen/vivo_first_view_marginTop">	  
    	<LinearLayout 
    	    android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			>
    	    <TextView
		    	android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/vivo_label_field_marginLeft"
				android:layout_marginRight="@dimen/vivo_label_field_marginRight"
				android:textSize="@dimen/vivo_text_size_small"
			    android:textColor="@color/vivo_text_color_small"
				android:singleLine="true"
				android:text="@string/vivo_account_num_label"/>
    	</LinearLayout>
    	<com.vivo.account.base.Utils.EditTextErrorFixed
			android:id="@+id/account_num_input"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/vivo_edit_field_paddingLeft"
			android:paddingRight="@dimen/vivo_edit_field_paddingRight"
			android:gravity="center_vertical"
			android:background="@null"
			android:textSize="@dimen/vivo_text_size_middle"
		    android:textColor="@color/vivo_text_color_middle"			
			android:singleLine="true"
			android:inputType="textNoSuggestions" 
			android:hint="@string/vivo_account_hint_label"
			/> 
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="@dimen/vivo_edit_container_height"
    	android:paddingLeft="@dimen/vivo_change_pwd_lable_paddingLeft"
    	android:id="@+id/account_password_input_layout"
    	android:layout_below="@+id/account_num_input_layout"
    	android:background="@drawable/vivo_edit_bottom_round">
    	<LinearLayout 
    	    android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center">
    	    <TextView
		    	android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_marginLeft="@dimen/vivo_label_field_marginLeft"
				android:layout_marginRight="@dimen/vivo_label_field_marginRight"
				android:textSize="@dimen/vivo_text_size_small"
			    android:textColor="@color/vivo_text_color_small"
				android:singleLine="true"
				android:text="@string/vivo_account_password_label"/>
    	</LinearLayout>
    	<com.vivo.account.base.Utils.EditTextErrorFixed
		    android:id="@+id/account_password_input"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/vivo_edit_field_paddingLeft"
			android:paddingRight="@dimen/vivo_edit_field_paddingRight"
			android:gravity="center_vertical"
			android:background="@null"
			android:textSize="@dimen/vivo_text_size_middle"
			android:textColor="@color/vivo_text_color_middle"			
			android:singleLine="true"
			android:password="true"
			android:inputType="textNoSuggestions" 
			/>
	</LinearLayout>
	<Button
	    
	    android:id="@+id/account_login"
		android:layout_width="match_parent"
		android:layout_height="@dimen/vivo_green_btn_hight"
		android:layout_below="@+id/account_password_input_layout"
		android:layout_marginTop="20dip"
		android:layout_marginLeft="@dimen/vivo_green_btn_marginLeft"
		android:layout_marginRight="@dimen/vivo_green_btn_marginRight"
		android:text="@string/vivo_account_login"
		android:textColor="@android:color/white"
		android:textAppearance="?android:attr/textAppearanceMediumInverse"
		android:background="@drawable/vivo_login_btn"
		android:singleLine="true"
		/>
	<TextView android:id="@+id/account_tempLogin"
    	    android:layout_width="wrap_content" 
    	    android:layout_height="35dip"
    	    android:layout_below="@+id/account_login"
    	    android:layout_marginRight="@dimen/vivo_green_btn_marginRight"
	    	android:layout_alignParentRight="true"
	    	android:gravity="center"
	    	android:background="@null"
	    	android:text="@string/vivo_use_temp_account"
	    	android:textSize="@dimen/vivo_text_size_middle"
			android:textColor="@drawable/vivo_register_color_selector"
	    	android:singleLine="true"
			/>
	<LinearLayout
	    android:layout_width="match_parent"
	     android:layout_height="30dp"
	     android:layout_alignParentBottom="true"
	    android:layout_marginBottom="65dp"
	    android:gravity="center"
	    android:layout_gravity="center_horizontal|bottom"
	    android:layout_marginLeft="@dimen/vivo_green_btn_marginLeft"
	    android:layout_marginRight="@dimen/vivo_green_btn_marginRight">
    	<TextView android:id="@+id/account_registe"
    	     android:layout_width="wrap_content" 
    	    android:layout_height="wrap_content"
    	    android:layout_marginRight="5dp"
    	    android:paddingLeft="2dip"
    	    android:paddingRight="16dip"
    	    android:gravity="center"
    	    android:text="@string/vivo_account_registe"
    	    android:background="@null"
    	    android:textSize="@dimen/vivo_text_size_middle"
			android:textColor="@drawable/vivo_register_color_selector"
    	    android:singleLine="true"
			/>
    	<ImageView  
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:src="@drawable/vivo_register_findpwd_separater"
			/>
    	<TextView android:id="@+id/account_findpassword"
    	    android:layout_width="wrap_content" 
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="5dp"
    	    android:paddingLeft="16dip"
    	    android:paddingRight="2dip"
	    	android:gravity="center"
	    	android:background="@null"
	    	android:text="@string/vivo_account_findpassword"
	    	android:textSize="@dimen/vivo_text_size_middle"
			android:textColor="@drawable/vivo_register_color_selector"
	    	android:singleLine="true"
			/>    	
    </LinearLayout>	
	
</RelativeLayout>

