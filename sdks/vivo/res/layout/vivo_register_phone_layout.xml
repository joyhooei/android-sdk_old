<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vivo_activity_background_color"
    android:orientation="vertical" >    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivowindowTitleHeight"
        android:background="@drawable/vivo_window_title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vivo_registe_phone_title"
            android:textColor="@color/vivo_windowTitleColor"
            android:textSize="@dimen/vivowindowTitleTextSize" />

        <Button
            android:id="@+id/titleLeftBtn"
            android:layout_width="40.5dp"
            android:layout_height="40.5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/vivo_btn_title_back" />
    </RelativeLayout>
<ScrollView 
  android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
         android:background="@drawable/vivo_activity_background_color">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
    <TextView
        android:id="@+id/phone_num_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="20dip"
        android:gravity="left"
        android:paddingLeft="4dip"
        android:textColor="@color/vivo_text_color_middle"
        android:textSize="@dimen/vivo_text_size_small"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/account_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivo_edit_container_height"
        android:layout_marginTop="@dimen/vivo_first_view_marginTop"
        android:background="@drawable/vivo_edit_top_round"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/vivo_change_pwd_lable_paddingLeft" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vivo_account_num_register_label"
                android:textColor="@color/vivo_text_color_small"
                android:textSize="@dimen/vivo_text_size_small" />
        </LinearLayout>

        <com.vivo.account.base.Utils.EditTextErrorFixed
            android:id="@+id/account_name_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/vivo_account_register_phone_label_tip"
            android:inputType="textNoSuggestions"
            android:paddingLeft="@dimen/vivo_edit_field_paddingLeft"
            android:paddingRight="@dimen/vivo_edit_field_paddingRight"
            android:singleLine="true"
            android:textColor="@color/vivo_text_color_middle"
            android:textSize="@dimen/vivo_text_size_middle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivo_edit_container_height"
        android:background="@drawable/vivo_edit_top_round"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/vivo_change_pwd_lable_paddingLeft" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/account_num_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vivo_phone_num_verify_label"
                android:textColor="@color/vivo_text_color_small"
                android:textSize="@dimen/vivo_text_size_small" />
        </LinearLayout>

        <com.vivo.account.base.Utils.EditTextErrorFixed
            android:id="@+id/phone_num_verify_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/vivo_edit_field_paddingLeft"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/vivo_phone_num_verify_tip"
            android:singleLine="true"
            android:textColor="@color/vivo_text_color_middle"
            android:textSize="@dimen/vivo_text_size_middle" />

        <Button
            android:id="@+id/get_verify_code"
            android:layout_width="120dp"
            android:layout_height="@dimen/vivo_green_btn_hight"
            android:layout_marginLeft="@dimen/vivo_edit_field_paddingLeft"
            android:layout_marginRight="2dp"
            android:background="@drawable/vivo_get_verify_code_drawable"
            android:gravity="center"
            android:text="@string/vivo_get_verify_code"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivo_edit_container_height"
        android:background="@drawable/vivo_edit_bottom_round"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/vivo_change_pwd_lable_paddingLeft" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/account_num_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vivo_register_password_label"
                android:textColor="@color/vivo_text_color_small"
                android:textSize="@dimen/vivo_text_size_small" />
        </LinearLayout>

        <com.vivo.account.base.Utils.EditTextErrorFixed
            android:id="@+id/pwd_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/vivo_register_phone_setpwd_tip"
            android:paddingLeft="@dimen/vivo_edit_field_paddingLeft"
            android:paddingRight="@dimen/vivo_edit_field_paddingRight"
            android:singleLine="true"
            android:textColor="@color/vivo_text_color_middle"
            android:textSize="@dimen/vivo_text_size_middle" />

        <LinearLayout
            android:id="@+id/show_pwd_button_layout"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal" >

            <CheckedTextView
                android:id="@+id/show_pwd_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checkMark="@drawable/vivo_checkbox"
                android:checked="true"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/vivo_change_pwd_lable_paddingLeft"
        android:layout_marginRight="22dip"
        android:layout_marginTop="10dip"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/read_protocol_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@drawable/vivo_read_protocol_color"
            android:textSize="@dimen/vivo_text_size_small" />
    </LinearLayout>

    <Button
        android:id="@+id/titleRightBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivo_green_btn_hight"
        android:layout_marginLeft="@dimen/vivo_green_btn_marginLeft"
        android:layout_marginRight="@dimen/vivo_green_btn_marginRight"
        android:layout_marginTop="20dip"
        android:background="@drawable/vivo_login_btn"
        android:singleLine="true"
        android:text="@string/vivo_account_registe_finish_lable"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="@dimen/vivo_green_btn_marginLeft"
        android:layout_marginRight="@dimen/vivo_green_btn_marginRight"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/account_registe_email_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center"
            android:paddingRight="95dip"
            android:singleLine="true"
            android:text="@string/vivo_account_registe_email"
            android:textColor="@drawable/vivo_register_color_selector"
            android:textSize="@dimen/vivo_text_size_middle" />

        <TextView
            android:id="@+id/account_old_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="65dip"
            android:singleLine="true"
            android:text="@string/vivo_old_account_login"
            android:textColor="@drawable/vivo_register_color_selector"
            android:textSize="@dimen/vivo_text_size_middle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="20dip"
        android:gravity="left"
        android:paddingLeft="4dip"
        android:text="@string/vivo_phone_num_verify_intro"
        android:textColor="@color/vivo_text_color_middle"
        android:textSize="@dimen/vivo_text_size_small"
        android:visibility="gone" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
